{
  "compilerOptions": {
    "outDir": "./build",
    "lib": [
      "ES5",
      "ES6",
      "ES2020"
    ],
    "module": "commonjs",
    "target": "ES6",
    "sourceMap": true,
    "alwaysStrict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*",
    "test/**/*",
    "lib/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
